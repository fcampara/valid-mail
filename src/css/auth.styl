.container {
  width: 100%;  
  min-height: 100vh;
  display: -webkit-box;
  display: -webkit-flex;
  display: -moz-box;
  display: -ms-flexbox;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  padding: 15px;
  background: #9053c7;
  background: -webkit-linear-gradient(-135deg, #c850c0, #4158d0);
  background: -o-linear-gradient(-135deg, #c850c0, #4158d0);
  background: -moz-linear-gradient(-135deg, #c850c0, #4158d0);
  background: linear-gradient(-135deg, #c850c0, #4158d0);
}

.login-pic {
  width: 60%
  // padding: 40px 80px;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}

.login-wrap {
  width: 85%;
  background: #fff;
  border-radius: 10px;
  overflow: hidden;
  display: -webkit-box!important;
  display: -webkit-flex;
  display: -moz-box;
  display: -ms-flexbox;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 35px 75px 55px 0px;
}

.login-html {
  width:40%;
}

@media (max-width: 992px) {
  .login-wrap {
    padding: 177px 90px 33px 85px;
  }

  .login-pic {
    width: 35%;
  }

  .login-html {
    width: 50%;
  }
}

@media (max-width: 768px) {
  .login-wrap {
    padding: 50px 60px 80px 50px;
  }

  .login-pic {
    display: none;
  }

  .login-html {
    width: 100%;
  }
}

@media (max-width: 576px) {
  .login-wrap {
    padding: 20px 0px 100px 15px;
  }

  .login-html {
    width: 90%;
  }
}

.login-html .sign-in-htm,
.login-html .sign-up-htm{
  top:0;
  left:0;
  right:0;
  bottom:0;
  position:absolute;
  transform:rotateY(180deg);
  backface-visibility:hidden;
  transition:all .4s linear;
}

.txt1 {
  font-family: Poppins-Regular;
  font-size: 16px;
  line-height: 1.5;
  color: #999999;
}

.txt2 {
  font-family: Poppins-Regular;
  font-size: 16px;
  line-height: 1.5;
  color: #666666;
}

.login-html .sign-in, .login-html .sign-up, .login-form .check{
  display:none;
}

.login-html .tab, .login-form .label, .login-form .button {
  text-transform:uppercase;
}

.login-html .tab {
  font-size:22px;
  margin-right:15px;
  padding-bottom:5px;
  margin:0 15px 10px 0;
  display:inline-block;
  border-bottom:2px solid transparent;
}

//Check style
.login-html .sign-in:checked + .tab,
.login-html .sign-up:checked + .tab {
  color:#9e6cba4d;
  border-color: #9e6cba;
}

//Formul√°rio
.login-form {
  min-height:345px;
  position:relative;
  perspective:1000px;
  transform-style:preserve-3d;
}

//Efeito de esconder
.login-html .sign-in:checked + .tab + .sign-up + .tab + .login-form .sign-in-htm {
  transform:rotate(0);
}

.login-html .sign-up:checked + .tab + .login-form .sign-up-htm {
  transform:rotate(0);
}
